<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/apk/res-auto"
  android:id="@+id/nav_graph"
  app:startDestination="@id/search_repository">

  <fragment
    android:id="@+id/search_repository"
    android:name="jp.co.yumemi.android.codecheck.SearchRepositoryFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_search_repository">
    <action
      android:id="@+id/action_repositoriesFragment_to_repositoryFragment"
      app:destination="@id/twoFragment" />
  </fragment>

  <fragment
    android:id="@+id/twoFragment"
    android:name="jp.co.yumemi.android.codecheck.TwoFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_two">
    <argument
      android:name="item"
      app:argType="jp.co.yumemi.android.codecheck.Item" />
  </fragment>
</navigation>
